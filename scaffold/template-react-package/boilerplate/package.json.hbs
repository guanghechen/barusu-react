{
  "name": "{{{packageName}}}",
  "version": "{{{lowerCase packageVersion}}}",
{{#if packageAuthor}}
  "author": {
    "name": "{{{packageAuthor}}}",
    "url": "https://github.com/{{{packageAuthor}}}/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}.git"
  },
{{#if isLernaProject}}
  "homepage": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}/tree/master/{{{packageLocation}}}#readme",
{{else}}
  "homepage": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}#readme",
{{/if}}
{{/if}}
  "keywords": [
    "react component",
    "stylus",
    "typescript"
  ],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.tsx",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map"
  ],
  "scripts": {
    "start": "rollup -w -c rollup.config.js",
    "prebuild": "rimraf lib/",
    "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "prepublishOnly": "cross-env ROLLUP_USE_SOURCE_MAP=false yarn build",
    "test": "echo 'no test yet'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix"
  },
  "peerDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/react": "^16.9.23",
    "classnames": "^2.2.6",
    "react": "^16.13.0"
  },
  "devDependencies": {
    "@barusu-react/eslint-config": "^{{{lowerCase packageVersion}}}",
    "@barusu-react/rollup-config": "^{{{lowerCase packageVersion}}}",
    "@types/classnames": "^2.2.9",
    "@types/react": "^16.9.23",
    "classnames": "^2.2.6",
    "react": "^16.13.0",
    "rollup": "2.28.1"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "ie >= 11"
  ]
}
