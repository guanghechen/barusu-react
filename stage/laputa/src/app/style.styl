*
  box-sizing: border-box

html
body
  padding: 0
  margin: 0

.route
  display: flex
  flex-direction: row
  height: 100vh
  width: 100vw
  box-sizing: border-box
  overflow: auto
  .route-sidebar
    flex: 0 0 auto
    margin-right: 1rem
    box-sizing: border-box

  .route-main
    flex: 1 1 auto
    height: 100%
    display: flex
    box-sizing: border-box
    justify-content: center
    align-items: center
