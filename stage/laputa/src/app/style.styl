*
  box-sizing: border-box

html
body
  padding: 0
  margin: 0

.route
  display: flex
  height: 100vh
  width: 100vw
  box-sizing: border-box
  overflow: auto
  .route-sidebar
    flex: none
    margin-right: 1rem

  .route-main
    flex: auto
    height: 100%
    display: flex
    box-sizing: border-box
    justify-content: center
    align-items: center
